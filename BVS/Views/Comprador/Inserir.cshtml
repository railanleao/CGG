@model BVS.Models.Entity.CompradorAssociado.Comprador

@{
    ViewData["Title"] = "Inserir";
}
<div class="d-flex justify-content-between align-content-center pt-3 pb-2">
    <h1>Inserir Cliente</h1>
    <a class="btn btn-primary btn-lg" asp-action="ObterTodos">Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Inserir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">Dados Pessoais</div>
                <div class="card-body row">                    
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="CPF" class="control-label"></label>
                            <input asp-for="CPF" class="form-control" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
