@model BVS.Models.Entity.CompradorAssociado.Comprador

@{
    ViewData["Title"] = "ObterPorId";
}
<div class="d-flex justify-content-between align-content-center pt-3 pb-2">
    <h4>Cliente</h4>
    <a class="btn btn-primary m-1 btn-lg" asp-action="ObterTodos">Voltar</a>
</div>
<br />
<div class="card">
    <div class="card-header">Informações Pessoais</div>
        <div class="card-body">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Nome)</label>
                <input class="form-control" value="@Html.DisplayFor(model => model.Nome)" />
            </div>
             <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.CPF)</label>
                <input value="@Html.DisplayFor(model => model.CPF)" class="form-control" />
            </div>
        </div>
</div>
<br />
<div>
    <a class="btn btn-success btn-lg" asp-action="Atualizar" asp-route-id="@Model?.CadastroId">Atualizar</a>
</div>
